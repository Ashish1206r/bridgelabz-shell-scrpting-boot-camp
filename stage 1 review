NOTEPAD CODING TO SOLVE problem:

for item in `ls`
do
   nameOfFile=`echo $item | awk -F. '{ print $1 }'`
   subfile=`echo $item | awk -F. '{ print $2 }'`
   if [ -d $nameOfFile ]
   then
       echo "** This Is Inside IF-Block ***"
       rm -rf $nameOfFile
   fi
   mkdir -p $nameOfFile/$subfile
   mv  $item $nameOfFile/$subfile
done 

RUN
>bash day4.sh
